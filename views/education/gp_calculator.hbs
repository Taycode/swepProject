<div class="main">

    <h1 class="text-center" style="">Calculation of GPA</h1>

    <div class="result mx-auto justify-content-center">
        <form action="" id="gpForm">
            <div class="row">
                <div class="col-md-3">
                    <div class="form-inline-group">
                       <label for="course">COURSE CODE: </label>
                       <input type="text" id="courseCode" name="course" placeholder="Enter Course Code">
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="form-inline-group">
                        <label for="unit">Unit: </label>
                        <input type="number" name="course" id="courseUnit" placeholder="Unit">
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="form-inine-group">
                        <label for="score">Score: </label>
                        <input type="number" name="score" id="grade" placeholder="Your score">
                    </div>
                </div>
                <button type="button" name="submit" id="add_to_course_list" style="height: 30px; margin-top: 30px;"
                onclick="add()"><i class="fa fa-plus"></i></button>
            </div>
        </form>

        <table class="table">
            <thead>
                <tr>
                    <th scope="col">Course Code</th>
                    <th scope="col">unit</th>
                    <th scope="col">Grade</th>
                </tr>
            </thead>
            <tbody id="listBody">
                <tr>
                    <td></td>
                    <td></td>
                    <td></td>
                </tr>
            </tbody>

        </table>
        <button id="calculateGp" onclick="calculate()" class="float-right">Calculate Gp</button>


    </div>
