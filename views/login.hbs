<div class="container-fluid">
  <div class="row">
    <div class="signup_content col-md-6">
      <div class="signup_parent" style="margin-bottom: 0px; height: 390px;">
        <h2 class="signup_header">Login up</h2>
        <div class="signup_children">
          <p class="signup_body">
            Welcome to Cool Dash.<br>
            let get started.
          </p>
        </div>
        <div class="signup_image">
          <img src="/images/Logo.svg" alt="logo" width="100px;">
        </div>
      </div>
    </div>
    <div class="col-md-6">
      <div class="container form_container mx-auto" style="height: 469px; margin-top: 230px !important;">
        <h5 class="text-danger text-center">{{ message }}</h5>
        <form action="" method="post">

          <div class="form-group">
            <input type="email" name="email" id="email" placeholder="Email" value="{{email}}" class="form-control">
          </div>
          <div class="form-group">
            <input type="password" name="password" id="password" Placeholder="Password" class="form-control">
          </div>
          <button type="submit" class="btn btn-sm signup_btn mx-auto">Login</button>
        </form>
        <div class="text-center">
          <a href="/signup" class="redirect text-center mt-4"> not registered yet? it will only take a minute</a> <br>
          <a href="/forgot_password" class="redirect text-center mt-4">Forgot Password</a>
        </div>
      </div>
    </div>
  </div>
</div>